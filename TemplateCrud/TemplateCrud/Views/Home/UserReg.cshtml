@model TemplateCrud.Models.UserInfoModel



@{
    ViewBag.Title = "UserReg";
    Layout = null;
}

<link href="~/Content/AppCss/css/bootstrap.min.css" rel="stylesheet" />

<link href="~/Content/AppCss/css/metisMenu.min.css" rel="stylesheet" />

<link href="~/Content/AppCss/css/startmin.css" rel="stylesheet" />

<link href="~/Content/AppCss/css/font-awesome.min.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Registration Form</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Form Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("UserRes", "Home", FormMethod.Post))
                            {
                                @Html.HiddenFor(a => a.Id)
                                <div class="form-group">
                                    <lable>Name :</lable>
                                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @placeholder = "Enter name.." })
                                </div>

                                <div class="form-group">
                                    <lable>Email :</lable>
                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control", @placeholder = "Enter name.." })
                                </div>

                                <div class="form-group">
                                    <lable>Password :</lable>
                                    @Html.TextBoxFor(a => a.Password, new { @class = "form-control", @placeholder = "Enter name.." })
                                </div>

                                <button type="submit" class="btn btn-success">Submit</button><br /><br />
                                <span>Already Have an Account</span>
                                <a href="@Url.Action("Index","Home")">Login Here</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

