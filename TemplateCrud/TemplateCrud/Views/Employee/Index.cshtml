@model List<TemplateCrud.Models.EmpRes> 


@{
    ViewBag.Title = "Index";
}

<h2>Employee Details</h2>

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>City</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.City</td>
            <td><a class="btn btn-success" href="@Url.Action("Edit","Employee",new { item.Id})">Edit</a></td>
            <td><a class="btn btn-danger" href="@Url.Action("Delete","Employee",new { item.Id})">Delete</a></td>
        </tr>
    }
</table>